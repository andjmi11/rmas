<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Naslov dijaloga -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="?android:attr/colorPrimary"
            android:textColor="@android:color/white" />

        <!-- Prikaz imena i prezimena kreatora i prosečne ocene -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/creator_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
            <!--Mogu da dodam datum i vreme kreiranja pored kreatora-->

        </LinearLayout>

        <!-- Prikaz postojećih recenzija -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/existing_reviews_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_review"/>

        <!-- Dugmadi za prikaz slika i dodavanje nove recenzije -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Dugme za prikaz slika -->
            <Button
                android:id="@+id/show_images_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prikaži slike"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="15dp"/>

            <!-- Dugme za dodavanje nove recenzije -->
            <Button
                android:id="@+id/add_review_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj recenziju"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
